<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Control">
        <Setter Property="FontFamily" Value="./Fonts/#Montserrat Thin"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Foreground" Value="DarkGreen"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Control}}"/>
    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type Control}}"/>
    <Style TargetType="Label" BasedOn="{StaticResource {x:Type Control}}"/>

    <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="Red"/>
    </Style>

</ResourceDictionary>