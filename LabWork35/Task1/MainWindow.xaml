<Window x:Class="Task123.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task123"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400" Closing="Window_Closing">
    <StackPanel>
        <TextBox x:Name="FileTextBox" AcceptsReturn="True"/>
        <Button x:Name="OpenButton" Content="Открыть" Click="OpenButton_Click"/>
        <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
