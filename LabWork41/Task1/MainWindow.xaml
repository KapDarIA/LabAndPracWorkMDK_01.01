<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="MenuStackPanel" Background="LightGray" Width="26" HorizontalAlignment="Left">
            <Button x:Name="HamburgerButton" Content="☰" Click="HamburgerButton_Click"/>
            <DockPanel>
                <TextBlock Text="1" FontSize="48"/>
                <TextBlock Text="Раздел1" VerticalAlignment="Center"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="2" FontSize="48"/>
                <TextBlock Text="Раздел2" VerticalAlignment="Center"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="3" FontSize="48"/>
                <TextBlock Text="Раздел3" VerticalAlignment="Center"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
